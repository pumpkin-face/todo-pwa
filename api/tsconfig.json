{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",        // ← Cambiado de "CommonJS" a "ES2020" (o "ESNext")
    "moduleResolution": "Bundler", // ← Recomendado para ESM
    "outDir": "../dist/api",
    "rootDir": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}