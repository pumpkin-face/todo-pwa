# --- ETAPA 1: Construcción (Builder) ---
FROM node:20-alpine AS builder

WORKDIR /app

# Copiar package.json y package-lock.json para instalar todas las dependencias
COPY package*.json ./
RUN npm install

# Copiar todo el código fuente del proyecto
COPY . .

# Compilacion TypeScript a JavaScript
RUN npm run build

# --- ETAPA 2: Producción ---
FROM node:20-alpine

WORKDIR /app

# Copiar package.json de nuevo para instalar solo las dependencias de producción
COPY package*.json ./
RUN npm install --omit=dev

# Copiar el código compilado desde la etapa de construcción
COPY --from=builder /app/dist ./dist

# Exponer el puerto que usa el servidor
EXPOSE 5000

# El comando final para iniciar el server
CMD [ "node", "dist/server.js" ]